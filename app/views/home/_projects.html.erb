<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>PROJECT</th>
      <% Task.status.values.each do |status| %>
        <th><%= status.upcase %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @project_tasks.each_pair do |project_title, tasks| %>
      <tr>
        <td><%= link_to project_title, project_path(tasks.first.project_id) %></td>
        <% Task.status.values.each do |status| %>
          <th>
            <ul>
              <% tasks.select{|x| x.status == status}.each do |task| %>
                <li><%= link_to task.title, task_path(task) %></li>
              <%end%>
            </ul>
          </th>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
